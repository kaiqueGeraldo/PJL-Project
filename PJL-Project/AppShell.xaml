<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PJL_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PJL_Project"
    xmlns:views="clr-namespace:PJL_Project.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PJL_Project">

    <ShellContent
        Title="TypeLoginPage"
        ContentTemplate="{DataTemplate views:TypeLoginPage}"
        Route="TypeLoginPage" />

    <TabBar>
        <Tab Title="Home" Icon="house.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"
                   Route="HomePage"/>
        </Tab>

        <Tab Title="Category" Icon="list_task.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CategoryPage}"
                   Route="CategoryPage"/>
        </Tab>

        <Tab Title="Bag" Icon="bag.svg">
            <ShellContent ContentTemplate="{DataTemplate views:BagPage}"
                   Route="BagPage"/>
        </Tab>

        <Tab Title="Saves" Icon="heart.svg">
            <ShellContent ContentTemplate="{DataTemplate views:BookmarkPage}"
                   Route="BookmarkPage"/>
        </Tab>

        <Tab Title="Perfil" Icon="person.svg">
            <ShellContent ContentTemplate="{DataTemplate views:PerfilPage}"
                   Route="PerfilPage"/>
        </Tab>
    </TabBar>

</Shell>
